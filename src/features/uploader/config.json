  "constraints": {
    "allowedProtocols": ["http:", "https:"],
    "maxUrlLength": 2048,
    "fileUpload": {
      "accept": ["audio/*", "video/*"],
      "maxSizeMb": 512
    }
  },
  "messages": {
    "success": "Задача успешно создана. Проверяем статус…",
    "restart": "Повторная обработка запущена."
  }
}
